{
  "name": "Google Chrome Minesweeper Solver",
  "description": "Solves minesweeper.",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/fbx?fbx=minesweeper", "https://www.google.com/search?q=minesweeper*", "https://minesweeperonline.com"],
      "js": ["chrome.js", "online.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["other.js"],
      "matches": ["https://www.google.com/*"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "/images/flag16.png",
      "32": "/images/flag32.png",
      "48": "/images/flag48.png",
      "128": "/images/flag128.png"
    }
  },
  "icons": {
    "16": "/images/flag16.png",
    "32": "/images/flag32.png",
    "48": "/images/flag48.png",
    "128": "/images/flag128.png"
  }
}
